<h1>Listing sounds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Created on</th>
    <th>User</th>
    <th>Subsheet</th>
    <th>Reviewed</th>
    <th>Maintenance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sounds.each do |sound| %>
  <tr>
    <td><%= sound.name %></td>
    <td><%= sound.description %></td>
    <td><%= sound.created_on %></td>
    <td><%= sound.user_id %></td>
    <td><%= sound.subsheet_id %></td>
    <td><%= sound.reviewed %></td>
    <td><%= sound.maintenance %></td>
    <td><%= link_to 'Show', sound %></td>
    <td><%= link_to 'Edit', edit_sound_path(sound) %></td>
    <td><%= link_to 'Destroy', sound, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

