<% provide(:title, "Mainsheets: Playing soungs all night long!") %>
<% provide(:keywords, "creative, world, fanfiction, writer") %>
<% provide(:description, "Where users can create awesome tunes for others to listen to.") %>
<h1 class="pageheader">
   <% if getOptional %>
      <%= @user.vname %>'s mainsheets
   <% else %>
      Listing mainsheets
   <% end %>
</h1>
<br>
<div class="pagebox"><%= paginate @mainsheets %></div>
<% @mainsheets.each do |mainsheet| %>
   <br>
   <p class="pagetext"><%= link_to mainsheet.name, user_mainsheet_path(mainsheet.user, mainsheet) %></p>
   <p class="pagetext">Created on: <%= mainsheet.created_on.strftime("%B-%d-%Y") %></p>
   <p class="pagetext"><%= mainsheet.description %></p>
   <% if !getOptional %>
      <p class="pagetext">Announcer: <%= getType(mainsheet.user) %><%= link_to mainsheet.user.vname, user_path(mainsheet.user) %></p>
   <% end %>
<% end %>
