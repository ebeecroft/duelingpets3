<% provide(:style, ".errorheader{text-align: left;font-weight: bold;padding: 5px 5px 5px 15px;font-size: 12px;
margin: -7px;margin-bottom: 0px;background-color: #c00;color: #fff;}") %>
<% provide(:style, ".errorslisted{font-size: 12px;list-style: square;}") %>
<% provide(:style, "#error_explanation{width: 450px;border: 2px solid red;padding: 7px;padding-bottom: 0;
margin-bottom: 20px;background-color: #f0f0f0;") %>
<%= form_for([@user, @mainsheet]) do |f| %>
   <% if @mainsheet.errors.any? %>
      <div class="pagetext">
    <div id="error_explanation">
      <h2><%= pluralize(@mainsheet.errors.count, "error") %> prohibited this mainsheet from being saved:</h2>

      <ul>
      <% @mainsheet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <%= form_for([@user, @mainfolder]) do |f| %>
   <% if @mainfolder.errors.any? %>
      <div class="pagetext">
         <div id="error_explanation">
            <h2 class="errorheader"><%= pluralize(@mainfolder.errors.count, "error") %> prohibited this mainfolder from being saved:</h2>

            <ul class="errorslisted">
               <% @mainfolder.errors.full_messages.each do |msg| %>
                  <li class="errorslisted"><%= msg %></li>
               <% end %>
            </ul>
         </div>
      </div>
   <% end %>
  <div class="pagetext">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="pagetext">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="pagetext">
    <%= f.submit %>
  </div>
  <br>
<% end %>
