<% provide(:title, "A collection of many different available forums!") %>
<% provide(:description, "A place for the admin to see what forums are available.") %>
<h1 class="pageheader">Forum list</h1>
<br>
<div class="pagebox"><%= paginate @forums %></div>
<br>
<% @forums.each do |forum| %>
   <div class="pagetext">
      <div class="inner"><%= link_to forum.name, user_forum_path(forum.user.vname, forum) %></div>
      <div class="inner"><%= button_to 'Edit', edit_user_forum_path(forum.user, forum), method: :get %></div>
      <div class="inner"><%= button_to 'Destroy', [forum.user, forum], method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <br>
      <p>Owner: <%= getType(forum.user) %><%= link_to forum.user.vname, user_path(forum.user) %></p>
      <p><%= forum.description %></p>
   </div>
   <br>
<% end %>

