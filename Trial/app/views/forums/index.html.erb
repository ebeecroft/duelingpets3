<% provide(:title, "Forum: The current social communities available!") %>
<% provide(:keywords, "forum, users, social, community") %>
<% provide(:description, "All of the available locations for users to hang out and have some fun.") %>
<h1 class="pageheader">
   <% if getOptional %>
      <%= @user.vname %>'s forums
   <% else %>
      Listing forums
   <% end %>
</h1>
<br>
<div class="pagebox"><%= paginate @forums %></div>
<% @forums.each do |forum| %>
   <br>
   <p class="pagetext"><%= link_to forum.name, user_forum_path(forum.user.vname, forum) %></p>
   <p class="pagetext"><%= forum.description %></p>
   <% if !getOptional %>
      <p class="pagetext"><%= getType(forum.user) %><%= link_to forum.user.vname, user_path(forum.user) %></p>
      <p class="pagetext">Status: <%= getStatus(forum.user) %>
         <% if getStatus(forum.user) != "Online" %>
            <% if getTime(forum.user) %>
               for <%= distance_of_time_in_words_to_now getTime(forum.user) %>
            <% end %>
         <% end %>
      </p>
   <% end %>
<% end %>
