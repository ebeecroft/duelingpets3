</div>
<%= image_tag("/banner/duelingpetsbanner.jpeg", class: "banner") if Rails.env.development? %>
<%= image_tag("http://static.duelingpets.net/banner/duelingpetsbanner.jpeg", class: "banner") if Rails.env.production? %>
<div class="logo"><%= link_to "DuelingPets.net", root_path %></div>
<div class="profilebar"><%= profile %></div>
<% if current_user %>
   <br>
   <div class="profilebar">Pouch: <%= getPoints %> points</div>
<% end %>
<br>
<div class="navigationC">
<ul id="navigationbox" class="navigation">
   <!--Starting to get a bit too heavy with links right now.-->
   <!--Creativity and Community -->
   <div class="navigationspacing">
   <li class="dropdown">
      <div class="menucolor">Creativity*</div>
      <ul class="drop-nav">
         <li><%= link_to "Adopt a Pet", pets_path %></li>
         <li><%= link_to "Shop", items_path %></li>
         <% if current_user %>
            <li><%= link_to "Fight Monsters", pets_monsters_path %></li>
         <% end %>
         <li><%= link_to "Stories", sbooks_path %></li>
         <li><%= link_to "Gallery", mainfolders_path %></li>
         <li><%= link_to "Radios", mainsheets_path %></li>
      </ul>
   </li>
   </div>
   <div class="navigationspacing">
   <li class="dropdown">
      <div class="menucolor">Community*</div>
      <ul class="drop-nav">
         <li><%= link_to "News", blogs_path %></li>
         <li><%= link_to "Tutorial", tutorial %></li>
         <li><%= link_to "Forum", forums_path %></li>
         <% if current_user %>
            <li><%= link_to "Suggestions", new_suggestion_path %></li><!--Come back to this later-->
            <li><%= link_to "Active Users", active_path %></li>
         <% end %>
      </ul>
   </li>
   </div>
   <% if !current_user %>
      <div class="navigationspacing"><%= link_to "Forgot Password", recover_path %></div>
   <% else %>
      <div class="navigationspacing"><%= link_to "My Inventory", user_inventories_path(current_user.vname) %></div>
   <% end %>
</ul>
</div>
<%= timeleft %>
