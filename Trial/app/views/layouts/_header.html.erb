<div class="skip">
   <a class="skip" href="#main">Skip to main content</a>
   <a class="skip" href="#navigationbox">Skip to navigation</a>
</div>
<% if Rails.env.development? %>
   <div class="backgroundbox"><%= image_tag("/banner/duelingpetsbanner.jpeg", class: "banner") %></div>
<% elsif Rails.env.production? %>
   <div class="backgroundbox"><%= image_tag("http://static.duelingpets.net/banner/duelingpetsbanner.jpeg", class: "banner") %></div>
<% end %>
<div class="logo"><%= link_to "DuelingPets.net", root_path %></div>
<div class="profilebar"><%= profile %></div>
<br>
<div class="navbox">
   <div id="navigationbox" class="navigation">
      <!--Creativity and Community -->
      <div class="navigationspacing"><%= link_to "Adopt a Pet", pets_path %></div><!--Works great for guest at 80% font -->
      <% if !current_user %>
         <div class="navigationspacing"><%= link_to "Forgot Password", recover_path %></div>
         <div class="navigationspacing"><%= link_to "Forum", forums_path %></div>
      <% else %>
         <div class="navigationspacing"><%= link_to "Suggestions", new_suggestion_path %></div><!--Come back to this later-->
         <div class="navigationspacing"><%= link_to "Shop", items_path %></div>
      <% end %>
      <div class="navigationspacing"><%= link_to "News", blogs_path %></div>
      <% if current_user %>
         <div class="navigationspacing"><%= link_to "My Inventory", user_inventories_path(current_user.vname) %></div>
         <div class="navigationspacing"><%= link_to "Fight Monsters", pets_monsters_path %></div>
      <% end %>
      <% if !current_user %>
         <div class="navigationspacing"><%= link_to "Shop", items_path %></div>
      <% else %>
         <div class="navigationspacing"><%= link_to "Forum", forums_path %></div>
      <% end %>
      <div class="navigationspacing"><%= link_to "Stories", sbooks_path %></div>
      <div class="navigationspacing"><%= link_to "Gallery", mainfolders_path %></div>
      <div class="navigationspacing"><%= link_to "Radios", mainsheets_path %></div>
   </div>
</div>
<%= timeleft %>
