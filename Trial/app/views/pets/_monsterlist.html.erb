<% if @mypets.count > 0 %>
   <%= form_tag(petowner_fights_path(@selectpet)) do |f| %>
      <!--Petowner-->
      <p class="petbox">My current pet is: <%= collection_select(:selectedpet, :petowner_id, @mypets,:id,:pet_name)%></p>
      <br>
      <%= render 'petinfo' %>
      <div class="pagetext"><%= submit_tag("Fight Selected Monster") %></div>
   <% end %>
<% else %>
   <!--New User-->
   <%= render 'petinfo' %>
<% end %>
