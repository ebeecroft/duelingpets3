<% provide(:style, ".container{display: inline-block;padding-right: 2%;}") %>
<div class="pagetext">
   <% @equips.each_with_index do |equip, index| %>
      <div class="container">
         <div class="inner">
            <div class="inner"><%= link_to equip.inventory.item.name, item_path(equip.inventory.item.name) %></div>
            <% if current_user %> <!---Difference when current_user is nil-->
               <div class="inner"><%= button_to 'Destroy', [equip.petowner, equip], method: :delete, data: { confirm: 'Are you sure?' } %></div>
            <% end %>
            <p><%= image_tag equip.inventory.item.ipicture_url(:thumb).to_s %></p>
         </div>
         <div class="inner">
            <table>
               <tr>
                  <td>HP: <%= getItemValue(equip.inventory.item.hp) %></td>
               </tr>
               <tr>
                  <td>ATK: <%= getItemValue(equip.inventory.item.atk) %></td>
               </tr>
               <tr>
                  <td>DEF: <%= getItemValue(equip.inventory.item.def) %></td>
               </tr>
               <tr>
                  <td>SPD: <%= getItemValue(equip.inventory.item.spd) %></td>
               </tr>
            </table>
         </div>
         <% if !getOptional %>
            <p>Belongs to pet: <%= link_to equip.petowner.pet_name, user_petowner_path(equip.petowner.user, equip.petowner) %></p>
         <% end %>
      </div>
      <% if ((index + 1)%3) == 0 %>         
         <br>
         <br>
      <% end %>
   <% end %>
</div>
