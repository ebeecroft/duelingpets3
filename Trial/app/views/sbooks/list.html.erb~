<% provide(:title, "A collection of many different available series!") %>
<% provide(:description, "A place for the admin to see the various series that the user has developed.") %>
<h1 class="pageheader">Series list</h1>
<br>
<div class="pagebox"><%= paginate @sbooks %></div>
<% @sbooks.each do |sbook| %>
   <br>
   <div class="pagetext">
      <div class="inner"><%= link_to sbook.name, user_sbook_path(sbook.user.vname, sbook) %></div>
      <div class="inner"><%= button_to 'Edit', edit_user_sbook_path(sbook.user, sbook), method: :get %></div>
      <div class="inner"><%= button_to 'Destroy', [sbook.user, sbook], method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <p>Created on: <%= sbook.created_on.strftime("%B-%d-%Y") %></p>
      <p>Open series? <%= sbook.series_open %></p>
      <p>Author: <%= link_to sbook.user.vname, user_path(sbook.user) %></p>
   </div>
<% end %>
