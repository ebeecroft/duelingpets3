<% provide(:title, "Item: Attributes of the item for purchase!") %>
<% provide(:keywords, "item, attributes, purchase") %>
<% provide(:description, "Gives the user a rundown of the item they want before they choose to buy it.") %>
<p id="notice"><%= notice %></p>
<div class="pagetext">
   <div class="inner">Name: <%= @item.name %></div>
   <div class="inner">
      <% if current_user %>
         <% if current_user.id == @item.user_id || current_user.admin %>
            <%= button_to 'Edit', edit_item_path(@item), method: :get %>
         <% end %>
      <% end %>
   </div>
   <div class="inner">
      <% if current_user %>
         <% if current_user.admin %>
            <%= button_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' } %>
         <% end %>
      <% end %>
   </div>
   <p><%= image_tag @item.ipicture_url(:thumb).to_s %></p>
   <p>Created on: <%= @item.created_on.strftime("%B-%d-%Y") %></p>
   <p>Creator: <%= getType(@item.user) %><%= link_to @item.user.vname, user_path(@item.user) %></p>
   <p>Description: <%= @item.description %></p>
   <br>
   <p><%= link_to 'Back', items_path %></p>
</div>
