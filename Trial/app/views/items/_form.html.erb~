     </div>
  <% end %>
  <br>
  <div class="pagetext">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="pagetext">
     <%= image_tag @item.ipicture_url(:thumb).to_s if @item.ipicture? %>
  </div>
  <div class="pagetext">
    <%= f.file_field :ipicture %>
  </div>
  <div class="pagetext">
    <%= f.label :remote_ipicture_url, "or Image_URL" %>
