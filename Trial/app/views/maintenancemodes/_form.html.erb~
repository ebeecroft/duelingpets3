<%= form_for(@maintenancemode) do |f| %>
  <% if @maintenancemode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@maintenancemode.errors.count, "error") %> prohibited this maintenancemode from being saved:</h2>

      <ul>
      <% @maintenancemode.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :maintenance_on %><br />
    <%= f.check_box :maintenance_on %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
