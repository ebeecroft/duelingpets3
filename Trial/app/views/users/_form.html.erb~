<% provide(:style, ".errorheader{text-align: left;font-weight: bold;padding: 5px 5px 5px 15px;font-size: 12px;
margin: -7px;margin-bottom: 0px;background-color: #c00;color: #fff;}") %>
<% provide(:style, ".errorslisted{font-size: 12px;list-style: square;}") %>
<% provide(:style, "#error_explanation{width: 450px;border: 2px solid red;padding: 7px;padding-bottom: 0;
margin-bottom: 20px;background-color: #f0f0f0;") %>
<%= form_for @user, :html => {:multipart => true} do |f| %>
  <% if @user.errors.any? %>
     <div class="pagetext">
        <div id="error_explanation">
           <h2 class="errorheader"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

           <ul class="errorslisted">
              <% @user.errors.full_messages.each do |msg| %>
                 <li class="errorslisted"><%= msg %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <br>
  <!--<p class="pagetext">Virtual Name(Vname) is the only information seen by other users.</p>-->
  <% if object == "Edit" %>
     <div class="pagetext">
        <%= image_tag @user.avatar_url(:thumb).to_s if @user.avatar? %>
     </div>
     <div class="pagetext">
       <%= f.label :avatar %><br />
       <%= f.file_field :avatar %>
       <%= f.hidden_field :avatar_cache %>
     </div>
  <% end %>
  <div class="pagetext">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="pagetext">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="pagetext">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="pagetext">
    <%= f.label :login_id, "Login Name" %><br />
    <%= f.text_field :login_id %>
  </div>
  <div class="pagetext">
    <%= f.label :vname, "Virtual Name" %><br />
    <%= f.text_field :vname %>
  </div>
  <div class="pagetext">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="pagetext">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="pagetext">
    <%= f.submit %>
  </div>
  <br>
<% end %>
