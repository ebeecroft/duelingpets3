<div class="pagetext">
   <% if current_user && (current_user.id == @user.id || current_user.admin?) %>
      <div class="userspacing">First name: <%= @user.first_name %></div>
      <div class="inner">Last name: <%= @user.last_name %></div>
      <p>Email: <%= @user.email %></p>
   <% else %>
      <p>Name: <%= @user.first_name %></p>
   <% end %>
   <div class="userspacing">Vname: <%= getType(@user) %><%= @user.vname %></div>
   <div class="inner">Joined on: <%= @user.joined_on.strftime("%B-%d-%Y") %></div>
   <% if current_user && (current_user.id == @user.id || current_user.admin?) %>
      <p>Money: <%= @pouch.amount %></p>
   <% end %>
</div>
