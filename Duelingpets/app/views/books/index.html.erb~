<% provide(:title, "Book: Checkout the great selection of books available!") %>
<% provide(:description, "A place where the admin can view all of the books the users have created for their particular interest.") %>
<h1 class="pageheader">Listing books</h1>
<br>
<div class="pagebox"><%= paginate @books %></div>
<% @books.each do |book| %>
   <br>
   <div class="pagetext">
      <div class="inner"><%= link_to book.title, sbook_book_path(book.sbook, book) %></div>
      <div class="inner"><%= button_to 'Edit', edit_sbook_book_path(book.sbook, book), method: :get %></div>
      <div class="inner"><%= button_to 'Destroy', [book.sbook, book], method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <p><%= book.description %></p>
      <p>Created on: <%= book.created_on.strftime("%B-%d-%Y") %></p>
      <p>Author: <%= link_to book.user.vname, user_path(book.user) %></p>
      <p>Series: <%= link_to book.sbook.name, user_sbook_path(book.sbook.user, book.sbook) %></p>
   </div>
<% end %>
