<div class="pagetext">
   <% @pets.each_with_index do |pet, index| %>
      <div class="container">
         <div class="inner">
            <div class="inner"><%= link_to pet.species_name, pet %></div>
            <% if getPetType == "monster" %>
               <% if @mypets.count > 0 %>
                  <div class="inner"><%= radio_button_tag :pet_id, pet.id %></div>
               <% end %>
            <% elsif getPetType == "pet" %>
               <% if current_user %>
                  <div class="inner"><%= radio_button_tag :pet_id, pet.id %></div>
               <% end %>
            <% end %>
            <p><%= image_tag pet.image_url(:thumb).to_s %></p>
         </div>
         <div class="inner">
            <table>
               <tr>
                  <td>Level: <%= pet.level %></td>
               </tr>
               <tr>
                  <td>HP: <%= pet.hp %></td>
               </tr>
               <tr>
                  <td>ATK: <%= pet.atk %></td>
               </tr>
               <tr>
                  <td>DEF: <%= pet.def %></td>
               </tr>
               <tr>
                  <td>SPD: <%= pet.spd %></td>
               </tr>
               <% if getPetType == "pet" %>
                  <tr>
                     <td>Cost: <%= pet.cost %></td>
                  </tr>
               <% end %>
            </table>
         </div>
         <p>Creator: <%= getType(pet.user) %><%= link_to pet.user.vname, user_path(pet.user) %></p>
         <p>Created on: <%= pet.created_on.strftime("%B-%d-%Y") %></p>
      </div>
      <% if ((index + 1) % 3) == 0 %>         
         <br>
         <br>
      <% end %>
   <% end %>
</div>
